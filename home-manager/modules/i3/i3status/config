general {
	output_format = "i3bar"
 	colors = false
        interval = 1
}

order += "memory"
order += "load"
order += "disk /"
order += "tztime local"

memory {
    format = "RAM: %used"
    threshold_degraded = "10%"
    format_degraded = "MEMORY: %free"
}

load {
    format = "[ LOAD: %1min, %5min, %15min ]"
}

disk / {
    format = "DISK: %free"
}

tztime local {
    format = "%Y-%m-%d %I:%M:%S %p"
}
